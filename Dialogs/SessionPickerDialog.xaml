<Window x:Class="DeejNG.Dialogs.SessionPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Session" Height="150" Width="400"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="12"
        FontFamily="{materialDesign:MaterialDesignFont}"
        TextOptions.TextFormattingMode="Ideal">
    <StackPanel Margin="10">
        <ComboBox x:Name="SessionComboBox" Margin="0,0,0,10" />
        <Button Content="OK" Width="80" HorizontalAlignment="Right" Click="Ok_Click" Style="{DynamicResource MaterialDesignFlatButton}"/>
    </StackPanel>
</Window>
